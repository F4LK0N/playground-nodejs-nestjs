root = true

### GENERAL ###
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

### TEXT ###
[*.{md,txt}]
indent_size = 2
trim_trailing_whitespace = false

### GIT ###
[.{gitignore,gitconfig}]
insert_final_newline = false

### DOCKER ###
[Dockerfile]
insert_final_newline = false

[*compose.{yaml,yml}]
indent_size = 2
insert_final_newline = false

### MYSQL ###
[**/etc/*sql*/**.cnf]
indent_size = 2

### HTML ###
[*.htm*]
insert_final_newline = false

[*.css]
insert_final_newline = false

### JS ###
[*.js]
indent_size = 2
insert_final_newline = false

[*.ts]
indent_size = 2
insert_final_newline = false

[*.json]
indent_size = 4
insert_final_newline = false
